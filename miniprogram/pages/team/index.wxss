page {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.tab {
  position: sticky;
  top: 0;
  z-index: 99;
}

.team {
  height: 240rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  background-size: 100% 240rpx;
  margin: 20rpx 0;
  background-image: url(https://i.picsum.photos/id/932/600/300.jpg?blur=5&hmac=ZDwuTXmPLNRpW3C6ZCNbZ3htozXveZfpzI2nRGT04BA);
  background-size: cover;
}

.team-logo {
  margin-right: 30rpx;
}

.team-logo .logo-image {
  width: 120rpx;
  height: 120rpx;
  display: block;
  border-radius: 50%;
  background-color: #fff;
}

.team-name {
  color: #b6b6b6;
  margin-bottom: 10rpx;
}

.team-slogan {
  color: #b6b6b6;
  font-size: 24rpx;
}

.team-member {
  display: flex;
  margin-top: 40rpx;
}

.team-member .avatar {
  margin-right: 15rpx;
  position: relative;
}

.team-member .avatar-image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  border-radius: 50%;
}

.team-member .avatar.leader::after {
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: -17rpx;
  top: -17rpx;
  transform: rotate(-45deg);
  background-image: url(data:image/png;base64,);
  background-size: 100% 100%;
}

.team-member .counter {
  color: #b6b6b6;
  font-size: 22rpx;
  line-height: 1;
  align-self: flex-end;
}

.create {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  right: 50rpx;
  bottom: calc(env(safe-area-inset-bottom) + 40rpx);
  border-radius: 50%;
  box-shadow: 4rpx 4rpx 12rpx rgb(189, 188, 188);
  background-color: #3ac035;
}

.create .iconfont {
  color: #fff;
  font-size: 50rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  transition: transform .6s, box-show .6s;
}

.create.active {
  background-color: #73eb6f;
  transform: scale(.95);
  box-shadow: none;
}
